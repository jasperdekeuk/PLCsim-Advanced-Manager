@using Siemens.Simatic.Simulation.Runtime
<MudDialog>
    <DialogContent>
        <MudSelect T="ECPUType" Label="PLC Family" AnchorOrigin="Origin.BottomCenter" @bind-Value="@selectedInstance.CPUType">
            <MudSelectItem Value="@ECPUType.CPU1500_Unspecified"/>
            <MudSelectItem Value="@ECPUType.CPU1500_RH_Unspecified"/>
            <MudSelectItem Value="@ECPUType.ET200SP_Unspecified"/>
            <MudSelectItem Value="@ECPUType.ET200PRO_Unspecified"/>
        </MudSelect>
        <MudCheckBox @bind-Checked="@selectedInstance.StrictMotionTiming" Label="Strict Motion Timing"></MudCheckBox>
        <MudTextField @bind-Value="@selectedInstance.StoragePath" Label="Storage Path"></MudTextField>
        <MudSelect T="ECommunicationInterface" Label="Communication Interface" AnchorOrigin="Origin.BottomCenter" @bind-Value="@selectedInstance.CommunicationInterface">
            <MudSelectItem Value="@ECommunicationInterface.Softbus"/>
            <MudSelectItem Value="@ECommunicationInterface.TCPIP"/>
        </MudSelect>
        <MudSelect T="EOperatingMode" Label="Operating Mode" AnchorOrigin="Origin.BottomCenter" @bind-Value="@selectedInstance.OperatingMode">
            @foreach (EOperatingMode e in Enum.GetValues(typeof(EOperatingMode)))
            {
                <MudSelectItem Value="e"/>
            }
        </MudSelect>
        <MudTextField @bind-Value="@selectedInstance.SystemTime" Label="SystemTime"></MudTextField>
        <MudNumericField T="double" @bind-Value="@selectedInstance.ScaleFactor" Label="Scale Factor"></MudNumericField>
        <MudNumericField T="long" @bind-Value="@selectedInstance.OverwrittenMinimalCycleTime_ns" Label="Overwritten Minimal Cycletime [ns]"></MudNumericField>
        <MudCheckBox @bind-Checked="@selectedInstance.IsSendSyncEventInDefaultModeEnabled" Label="Send Syncevent in Default Mode Enabled"></MudCheckBox>
        
        <MudGrid Class="justify-space-between" Style="max-width: 800px;">
            <MudItem xs="12" sm="6">
                <MudTextField Mask="@ipv4Mask" Label="IP address [X1]" HelperText="@ipv4Mask.Mask"
                              @bind-Value="ip" Variant="@Variant.Text" Clearable/>
            </MudItem>
        </MudGrid>
        <MudGrid Class="justify-space-between" Style="max-width: 800px;">
            <MudItem xs="12" sm="6">
                <MudTextField Mask="@ipv4Mask" Label="Subnet Mask" HelperText="@ipv4Mask.Mask"
                              @bind-Value="subnet" Variant="@Variant.Text" Clearable/>
            </MudItem>
        </MudGrid>
        <MudGrid Class="justify-space-between" Style="max-width: 800px;">
            <MudItem xs="12" sm="6">
                <MudTextField Mask="@ipv4Mask" Label="Default Gateway" HelperText="@ipv4Mask.Mask"
                              @bind-Value="gateway" Variant="@Variant.Text" Clearable/>
            </MudItem>
        </MudGrid>
        <MudButton OnClick="setIp"> Set IP </MudButton>
    </DialogContent>
</MudDialog>